<Window x:Class="Konyvtar_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Konyvtar_App"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900" WindowStartupLocation="CenterScreen" Margin="5px">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.ColumnSpan="2" Margin="3px">
            <Label Content="Keresés cím alapján:"/>
            <TextBox x:Name="tbx_cim" Width="200px"/>
            <Label Content="Műfaj:"/>
            <ComboBox x:Name="cb_mufaj" Width="150px"/>
            
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="0">
                <Label Grid.Column="0" Grid.Row="1" Content="Cím:" Margin="5px"/>
                <TextBox x:Name="tbx_konyvcim" Grid.Column="1" Width="187" Margin="5px"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="1">
                <Label Grid.Column="0" Grid.Row="1" Content="Szerző:" Margin="5px"/>
                <TextBox x:Name="tbx_konyvszerzo" Grid.Column="1" Width="173" Margin="5px"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="2">
                <Label Grid.Column="0" Grid.Row="1" Content="Kiadás éve:" Margin="5px"/>
                <TextBox x:Name="tbx_konyvkiadaseve" Grid.Column="1" Width="151" Margin="5px"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="3">
                <Label Grid.Column="0" Grid.Row="1" Content="Műfaj" Margin="4px" Height="29"/>
                <ComboBox x:Name="cb_konyvmufaj" Grid.Column="1" Width="170" Margin="15px"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="4">
                <Label Grid.Column="0" Grid.Row="1" Content="Kölcsönhezhető:"/>
                <CheckBox x:Name="cbx_kolcsonhezheto"  Height="15"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="5" Margin="25px 0px 0px 0px">
                <Button x:Name="btn_hozzaadas" Content="Hozzáadás" Margin="3px" Click="btn_hozzaadas_Click"/>
                <Button x:Name="btn_modositas" Content="Módositása" Margin="3px"/>
                <Button x:Name="btn_torles" Content="Törlés" Margin="3px"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="6" Margin="20px 0px 0px 0px">
                <Button x:Name="btn_frissit" Content="Űrlap törlése és az adatok betöltése" Click="btn_frissit_Click"/>
            </StackPanel>
        </Grid>
        <DataGrid IsReadOnly="True" Grid.Row="1" Grid.Column="1" x:Name="dg_tablazat" Margin="5px" SelectionChanged="dg_tablazat_SelectionChanged"/>
    </Grid>
</Window>
